Package: remarkable
Architecture: all
Depends: ${shlibs:Depends}, ${misc:Depends},
         python3 | python,
         dconf-gsettings-backend | gsettings-backend,
         gir1.2-glib-2.0, gir1.2-gtk-3.0,
         python3-markdown, python3-bs4, python3-gtkspellcheck,
         gir1.2-webkit-3.0, gir1.2-gtksource-3.0,
